<div class="row mt-3">
  <div class="col-md-2"><span class="text-danger">*</span>必填欄位</div>
  <div class="col-md-4">請輸入你的支出</div>
</div>

<form action="/" method="POST">
  <div class="row mt-3">
    <div class="col-md-2">名稱<span class="text-danger">*</span></div>
    <div class="col-md-4">
      <input type="text" class="form-control">
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2 text-danger">日期<span class="text-danger">*</span></div>
    <div class="col-md-4">
      <input id="date" type="date" value="2017-06-01" class="form-control">
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2 text-danger">類別<span class="text-danger">*</span></div>
    <div class="col-md-4">
      <select class="custom-select">
        <option selected>類別</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲娛樂</option>
        <option value="5">其他</option>
      </select>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2 text-danger">金額<span class="text-danger">*</span></div>
    <div class="col-md-4">
      <input type="text" class="form-control">
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2 text-danger"></div>
    <div class="col-md-4">
      <button class="btn btn-danger" type="submit">新增支出</button>
    </div>
  </div>
</form>